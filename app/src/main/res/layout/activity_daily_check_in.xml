<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".DailyCheckInActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCredits"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:chipIcon="@drawable/ic_credit"
            app:chipIconTint="?attr/colorPrimary"
            app:chipBackgroundColor="?attr/colorSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/check_in_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Daily Check-in Rewards"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/check_in_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="Check in daily to claim rewards and win a jackpot on Day 7!"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check_in_title" />

    <ScrollView
        android:id="@+id/rewards_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/check_in_subtitle"
        app:layout_constraintBottom_toTopOf="@id/check_in_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/rewards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Day 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day 1"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+5 Credits"
                        android:layout_centerInParent="true"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:id="@+id/day1_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="?attr/textAppearanceBody2"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Day 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/day2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day 2"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+10 Credits"
                        android:layout_centerInParent="true"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:id="@+id/day2_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="?attr/textAppearanceBody2"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Day 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/day3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day 3"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+15 Credits"
                        android:layout_centerInParent="true"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:id="@+id/day3_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="?attr/textAppearanceBody2"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Day 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/day4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day 4"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+20 Credits"
                        android:layout_centerInParent="true"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:id="@+id/day4_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="?attr/textAppearanceBody2"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Day 5 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/day5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day 5"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+25 Credits"
                        android:layout_centerInParent="true"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:id="@+id/day5_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="?attr/textAppearanceBody2"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Day 6 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/day6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day 6"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+30 Credits"
                        android:layout_centerInParent="true"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:id="@+id/day6_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="?attr/textAppearanceBody2"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Day 7 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/day7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day 7"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JACKPOT! +50 Credits"
                        android:layout_centerInParent="true"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:id="@+id/day7_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="?attr/textAppearanceBody2"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/check_in_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="Check In"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
